<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_marginBottom="1dp"
    android:background="@color/weatherDetailBackground">
    <TextView
        android:id="@+id/timeOfDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="3.00 am"
        android:gravity="center"
        android:fontFamily="@font/alegreya"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:id="@+id/weatherIconDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_sun"
        android:padding="2dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timeOfDay"/>
    <TextView
        android:id="@+id/maxTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/WeatherReportCurrentTemperature"
        android:fontFamily="@font/alegreya"
        android:padding="2dp"
        android:gravity="right"
        app:layout_constraintLeft_toRightOf="@id/weatherIconDetails"
        app:layout_constraintTop_toBottomOf="@id/timeOfDay"/>
    <TextView
        android:id="@+id/condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear"
        android:fontFamily="@font/alegreya"
        android:padding="2dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weatherIconDetails"/>
</android.support.constraint.ConstraintLayout>