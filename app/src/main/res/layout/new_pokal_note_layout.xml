<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editNote"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:text="@string/NoteEditDate"
        android:maxLines="20"
        android:gravity="top"
        android:fontFamily="@font/alegreya_bold_italic"
        android:background="@color/calendarItemBackgroundNote"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/notesContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">
    <TextView
        android:id="@+id/notes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:maxLines="20"
        android:gravity="top"
        android:fontFamily="@font/alegreya_bold_italic"
        android:background="@color/calendarItemBackgroundNote" />
        <ImageButton
            android:id="@+id/editNoteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_edit_black_24dp"
            android:layout_gravity="left|bottom"
            android:layout_margin="20dp"
            android:background="@drawable/circular_background_grey"/>
        <ImageButton
            android:id="@+id/sendAsEmailButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_mail_outline_black_24dp"
            android:layout_gravity="center|bottom"
            android:layout_margin="20dp"
            android:background="@drawable/circular_background_grey"/>
        <ImageButton
            android:id="@+id/sendAsTextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_textsms_black_24dp"
            android:layout_gravity="right|bottom"
            android:layout_margin="20dp"
            android:background="@drawable/circular_background_grey"/>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/enterConatctOrNumberLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/searchTranslucentBackground"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="30dp"
            android:visibility="gone">
            <android.support.v7.widget.SearchView
                android:id="@+id/searchContacts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:layout_marginRight="5dp"
                android:background="@color/white"
                app:iconifiedByDefault="false"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <ImageButton
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="80dp"
                android:background="@drawable/circular_border_light"
                app:srcCompat="@drawable/ic_close_24dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </FrameLayout>

</android.support.constraint.ConstraintLayout>